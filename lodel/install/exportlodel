# script de creation de l'archive lodel pour diffusion

if [ $# -lt 1 ]
then
  echo " usage $0 <version> [with-0.6]"
  exit
fi

# nom du fichier genere
FILE="lodel-$1.tar.gz"

# repertoire a archiver
DIRS="lodel-$1 lodeladmin share-$1 tpl CACHE"

# renomme les repertoires du CVS pour contenir le numero de version
mv lodel lodel-$1
mv share share-$1

EXTRADIRS=""
if [ $# -eq 2 ]
then
        # bricolage pour precreer le lien vers share 0.6
        mkdir lodel-0.6
        touch lodel-0.6/share-0.6

        ln -s lodel-0.6/share-0.6 .
        cd lodel-$1
        ln -s ../lodel-0.6/share-0.6 .
        cd ..
        rm lodel-0.6/share-0.6
        rmdir lodel-0.6
        EXTRADIRS=share-0.6
fi


# fichier a exclure
find $DIRS $EXTRADIRS \
        -path '*/r2r/*' \
        -o \( -path '*/CACHE/*' -and -not -name '.htaccess' \) \
        -o -path '*/CVS*' \
        -o -name '*~' \
        -o -name '*.tmp' \
        -o -name '#*#' \
        -o -name '.#' \
        -o -name '*.old' \
        -o -name 'OLD*' | tar -p --gzip --create --file $FILE --exclude-from=- $DIRS $EXTRADIRS lodelconfig-dist.php index.html styles_lodel.css COPYING

# restauration des noms des repertoires
mv lodel-$1 lodel
mv share-$1 share
if [ $# -eq 2 ]
then
        rm share-0.6
	rm lodel/share-0.6
fi

echo "fichier $FILE cree";
ls -l  $FILE
