# script de creation de l'archive lodel pour diffusion

if [ $# -lt 1 ]
then
  echo " usage $0 <version> [with-0.6]"
  exit
fi

# nom du fichier genere
FILE="lodel-$1.tar.gz"

# repertoire a archiver
DIRS="lodel/lodel-$1 lodel/lodeladmin lodel/share-$1 lodel/tpl lodel/CACHE"

# renomme les repertoires du CVS pour contenir le numero de version
mv lodel/lodel lodel/lodel-$1
mv lodel/share lodel/share-$1

EXTRADIRS=""
if [ $# -eq 2 ]
then
        # bricolage pour precreer le lien vers share 0.6
        mkdir lodel/lodel-0.6
        touch lodel/lodel-0.6/share-0.6
	cd lodel
        ln -s lodel-0.6/share-0.6 .
        cd lodel-$1
        ln -s ../lodel-0.6/share-0.6 .
        cd ../..
        rm lodel/lodel-0.6/share-0.6
        rmdir lodel/lodel-0.6
        EXTRADIRS=lodel/share-0.6
fi


# fichier a exclure
find $DIRS $EXTRADIRS \
        -path '*/r2r/*' \
        -o \( -path '*/CACHE/*' -and -not -name '.htaccess' \) \
        -o -path '*/CVS*' \
        -o -path '*/src/tpl/*' \
        -o -path '*/src/css/*' \
        -o -name '*~' \
        -o -name '*.tmp' \
        -o -name '#*#' \
        -o -name '.#' \
        -o -name '*.old' \
        -o -name 'OLD*' | tar -p --gzip --create --file $FILE --exclude-from=- $DIRS $EXTRADIRS lodel/lodelconfig-dist.php lodel/index.php lodel/styles_lodel.css lodel/COPYING

# restauration des noms des repertoires
mv lodel/lodel-$1 lodel/lodel
mv lodel/share-$1 lodel/share
if [ $# -eq 2 ]
then
        rm lodel/share-0.6
	rm lodel/lodel/share-0.6
fi

echo "fichier $FILE cree";
ls -l  $FILE
